{
  "name": "stylelint",
  "version": "0.4.1",
  "description": "Modern CSS linter",
  "keywords": [
    "css",
    "lint",
    "linter",
    "csslint",
    "stylelint"
  ],
  "authors": [
    "Maxime Thirouin",
    "David Clark",
    "Richard Hallows"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stylelint/stylelint.git"
  },
  "main": "dist/index.js",
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "dependencies": {
    "autoprefixer-core": "^5.2.1",
    "balanced-match": "^0.2.0",
    "lodash": "^3.9.3",
    "postcss": "^4.1.12",
    "postcss-selector-parser": "^1.0.1"
  },
  "devDependencies": {
    "babel": "^5.6.3",
    "babel-eslint": "^3.1.17",
    "babel-tape-runner": "^1.1.0",
    "eslint": "^0.24.0",
    "sinon": "^1.15.3",
    "stylelint-rule-tester": "^0.1.0",
    "tape": "^4.0.1"
  },
  "scripts": {
    "prepublish": "babel src --out-dir dist",
    "docs-build": "babel-node scripts/rules",
    "lint": "eslint . --ignore-path .gitignore",
    "tape": "babel-tape-runner \"src/**/__tests__/*.js\"",
    "test": "npm run lint && npm run tape"
  }
}
